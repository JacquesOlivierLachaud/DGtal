//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
~ChordGenericNaivePlane()
{ // Nothing to do.
}
//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
ChordGenericNaivePlane()
{ // Object is invalid
  _axesToErase.reserve( 3 );
}
//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
ChordGenericNaivePlane( const ChordGenericNaivePlane & other )
  : myAxes( other.myAxes )
{
  for ( AxisConstIterator it = myAxes.begin(), itE = myAxes.end();
        it != itE; ++it )
    myComputers[ *it ] = other.myComputers[ *it ];
  _axesToErase.reserve( 3 );
}
//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar> &
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
operator=( const ChordGenericNaivePlane & other )
{
  if ( this != &other )
    {
      myAxes = other.myAxes;
      for ( AxisConstIterator it = myAxes.begin(), itE = myAxes.end();
            it != itE; ++it )
        myComputers[ *it ] = other.myComputers[ *it ];
    }
  return *this;
}
//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
DGtal::Dimension
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
active() const
{
  ASSERT( myAxes.size() > 0 );
  return myAxes[ 0 ];
}
//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
void
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
clear()
{
  myAxes.clear();
  for ( unsigned int i = 0; i < 3; ++i )
    {
      myAxes.push_back( i );
      myComputers[ i ].clear();
    }
}
//-----------------------------------------------------------------------------
template <typename TPoint, typename TInternalScalar>
inline
void
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::
init( InternalScalar widthNumerator,
      InternalScalar widthDenominator )
{
  clear();
  for ( unsigned int i = 0; i < 3; ++i )
    myComputers[ i ].init( i, widthNumerator, widthDenominator );
}
