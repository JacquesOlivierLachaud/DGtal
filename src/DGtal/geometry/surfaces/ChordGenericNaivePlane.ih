// Interface - public :

/**
 * Writes/Displays the object on an output stream.
 * @param out the output stream where the object is written.
 */
template <typename TPoint, typename TInternalScalar>
inline
void
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::selfDisplay ( std::ostream & out ) const
{
  double min, max;
  double N[ 3 ];
  out << "[ChordGenericNaivePlane";
  for ( AxisConstIterator axIt = myAxes.begin(), axItE = myAxes.end(); 
        axIt != axItE; ++axIt )
    out << " " << myComputers[ *axIt ];
  out << " ]"; 
}

/**
 * Checks the validity/consistency of the object.
 * @return 'true' if the object is valid, 'false' otherwise.
 */
template <typename TPoint, typename TInternalScalar>
inline
bool
DGtal::ChordGenericNaivePlane<TPoint, TInternalScalar>::isValid() const
{
  return myComputers[ active() ].isValid();
}


